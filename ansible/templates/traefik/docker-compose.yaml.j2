secrets:
  cf-token:
    file: ./cf-token
services:
  traefik:
    image: traefik:latest
    container_name: traefik
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true # helps to increase security
    secrets:
      - cf-token # the secret at the top of this file
    networks:
      - proxy
    ports:
      - 80:80
      - 443:443
      # - 8080:8080
    environment:
      - CF_DNS_API_TOKEN_FILE=/run/secrets/cf-token # see https://doc.traefik.io/traefik/https/acme/#providers
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /srv/docker/traefik/config/traefik.yaml:/traefik.yaml:ro
      - /srv/docker/traefik/config/acme.json:/acme.json
      - /srv/docker/traefik/config/config.yaml:/config.yaml:ro
      - /srv/docker/traefik/logs:/var/log/traefik

networks:
  proxy:
    external: true